{
  "manifest_version": 2,
  "name": "YouTube Comment History Viewer",
  "version": "1.0",
  "description": "View comment history for YouTube users",
  
  "permissions": [
    "https://www.youtube.com/*",
    "https://www.googleapis.com/*",
    "storage"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["config.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  
  "web_accessible_resources": [
    "styles.css"
  ],
  
  "icons": {
    "48": "icon.png",
    "96": "icon.png"
  }
}